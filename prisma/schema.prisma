// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Insurance {
  insurance_id Int @id @default(autoincrement())
  company String
}

model Company {
  company String @id
  amount Int
}

model LabResults {
  lab_results String @id
  post_diagnosis String
  current_medication String 
}

model AllergyList {
  allergy_list String @id
  allergies String
}

model Treatments {
  treatment_id Int @id @default(autoincrement())
  outcome String
  start_data String
  end_data String
}

model Billing {
  patient_id Int 
  billing_id Int @id
  insurance_id Int 
  itemized_cost Int
  Date String
}

model TotalCost {
  total_cost Int @id
  itemized_cost Int
}

model Appointment {
  appointment_id Int @id @default(autoincrement())
  patient_id Int
  professional_id Int
  data String
  time String
  purpose String
}

model Patient {
  patient_id Int @id
  billing_id Int
}

model MedicalRecords {
  record_id Int @id @default(autoincrement())
  allergy_list String
  lab_results String
}

model Attend {
  appointment_id Int
  employee_id Int 
  purpose String  

   @@id ([appointment_id, employee_id])
}

model Person {
 first String 
 middle String
 last String
 DOB DateTime
 city String
 street String
 State String
 PatientFlag Int
 HCPFlag Int
 PatientState String
 Patient_id Int
 PID Int
 Employee_id Int

 @@id([PID, Employee_id, Patient_id])
}

model Employee{
  Employee_id Int @id
  Specialization String
  WorkingHours Int
  YearsofExperience Int
}

model Specialization {
  Specialization String @id
  Department String 
}

model Assigned {
  record_id Int
  employee_id Int
  lab_results String

  @@id ([record_id, employee_id])
}

model Prescribed {
  treatment_id Int
  employee_id Int
  description String

  @@id ([treatment_id, employee_id])
}

model Treatment_Prescription_Record {
  treatment_id Int @id
  prescription_record String
}
